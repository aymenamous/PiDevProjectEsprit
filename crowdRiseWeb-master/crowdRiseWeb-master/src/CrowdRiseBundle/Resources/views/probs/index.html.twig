{# empty Twig template #}

{% extends "CrowdRiseBundle::layout.html.twig" %}
{% block Title %}CrowdRise | Browse projects{% endblock %}
{% block content %}
    <!-- Carousel   -->  

    <div class="carousel" selected="{{route}}">
        <a class="carousel-item"  href="/AllProblems">
            <paper-card elevation="1" data-route="AllProblems"  id="amine" image="http://lorempixel.com/250/250/nature/1" heading="Problemes">               
            </paper-card>                
        </a>
        <a class="carousel-item" href="/MesProblemes">
            <paper-card elevation="1" id="amine" image="http://lorempixel.com/250/250/nature/2" heading="Idees">                
            </paper-card>
        </a>
        <a class="carousel-item" href="/MesProblemes">
            <paper-card elevation="1" id="amine" image="http://lorempixel.com/250/250/nature/3" heading="Projets CF">                
            </paper-card>
        </a>
    </div>           


    <!-- style -->
    <link rel="stylesheet" href="{{asset('styles/main.css')}}">
    <style is="custom-style">
        paper-tabs {
            color: blue;
            --paper-tabs-selection-bar-color: #26a69a;
        }
        paper-card {
            margin: 8px 16px;
            width: 200px;
            height: 200px;
            --paper-card-header-color: white;
        }

        @media (max-width: 601px) {
            paper-card {
                width: 100% !important;
                margin-left: 0px;
                margin-right: 0px;
            }
        }
    </style>  
    <!-- End style -->

    <!-- javascript -->
    <script src="{{asset('bower_components/webcomponentsjs/webcomponents-lite.js')}}"></script>
    <script src="{{asset('scripts/app.js')}}"></script>
    <!-- End javascript -->

    <!-- imports + templates -->
    {{ include('CrowdRiseBundle:probs:elements.html.twig') }}
    <!-- End imports + templates -->      


    <template is="dom-bind" id="app">  
        <section style="height : 1000px;">
            <paper-header-panel mode="scroll">
                <!-- START THE TOOLBAR !-->
                <paper-toolbar id="indexToolbar"> 
                    <paper-tabs class="bottom"  attr-for-selected="data-route" selected="{{route}}">
                        <paper-tab data-route="AllProblems" ><center><a href="/AllProblems">Toutes les problemes</a></center></paper-tab>
                        <paper-tab data-route="MesProblemes"><center><a href="/MesProblemes">Mes problemes</a></center></paper-tab>
                    </paper-tabs>
                </paper-toolbar>
                <!-- END THE TOOLBAR !-->

                <!-- START THE IRON-PAGES !-->
                <neon-animated-pages attr-for-selected="data-route" selected="{{route}}">
                    <portfolio-AllProblems data-route="AllProblems"></portfolio-AllProblems>
                    <portfolio-MesProblemes data-route="MesProblemes"></portfolio-MesProblemes>
                    <portfolio-showcase data-route="showcase"></portfolio-showcase>
                </neon-animated-pages>
                <!-- END THE IRON-PAGES !-->
            </paper-header-panel>
        </section>
    </template>
{% endblock %}
