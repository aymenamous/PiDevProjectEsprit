{% extends "CrowdRiseBundle::layout.html.twig" %}
{% block script %}
    <script>
        $(document).ready(function(){
            $('#intro').css({
                'background-image' :'none',
                'height': 'auto'
            });
             $('#msg').css({
                'display' :'none'
            });
        });
        
    </script> 
{% endblock %}
{% block intro %}
    
   <div class="row">
        <div class="col s14 m12">
          <div style="width: 100%; height: 600px;" class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Contactez l'equipe CrowdRise ou envoyez votre reclamation :<br></span>
    <form method="POST">
        
        <div class="input-field col s12">
            <input disabled name="mail" value="Equipe_CrowdRise" id="disabled" type="text" class="validate" style="width: 250px; margin-left: 20px;">
            <label for="disabled">A</label>
        </div>
        
        <div class="input-field col s6">
            <i class="material-icons prefix">mode_edit</i>
            <textarea id="icon_prefix2" name="subject" class="materialize-textarea"></textarea>
            <label for="icon_prefix2">Objet</label>
        </div>
        <br><br>
        <div class="input-field col s12">
            <textarea id="textarea1" style="height:100px;" name="message" class="materialize-textarea"></textarea>
            <label for="textarea1">Message</label>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action" style="margin-left:1100px;margin-top:100px;">Envoyer
            <i class="material-icons right">send</i>
        </button>
    </form>
            </div>
          </div>
        </div>
   </div>
    
{% endblock %}