{% extends "CrowdRiseBundle::layout.html.twig" %}
{% block prob %} 
<script>
        $(document).ready(function () {
            $('#intro').css({
                'background-image': 'none',
                'height': 'auto'
            });
        });

</script>

<section id="intro2">
    
    <div class="container" style=" margin-top:-30px; "><br><br>
        <a style="float:right;" href="{{path('crowdrise_probleme_displayAll')}}"class="waves-effect waves-light btn"><i class="material-icons left">replay</i>Retour à la liste</a>
        <a style="float:right; margin-right: 13px;" href="{{path('crowdrise_probleme_displayAll')}}"class="waves-effect waves-light btn"><i class="material-icons left">insert_chart</i>Voir les résultats</a>
        <br><br><br>
        
      <form action="{{path('addanswer')}}" method="post">
      {% for i in tab %}
          <input type="hidden" name="id[{{loop.index0}}]" value="{{options[loop.index0].id}}">
        <ul class="collection with-header">
        <li class="collection-header"><h4> {{i.question}}</h4></li>
        <li class="collection-item"><input class="with-gap" value="1" name="group[{{loop.index0}}]" type="radio" id="{{loop.index}}1"/> <label for="{{loop.index}}1">{{options[loop.index0].option1}}</label>
        <li class="collection-item"><input class="with-gap" value="2" name="group[{{loop.index0}}]" type="radio" id="{{loop.index}}2"/> <label for="{{loop.index}}2">{{options[loop.index0].option2}}</label>
        <li class="collection-item"><input class="with-gap" value="3" name="group[{{loop.index0}}]" type="radio" id="{{loop.index}}3"/> <label for="{{loop.index}}3">{{options[loop.index0].option3}}</label>
        
      </ul>
            
 
      
  {%endfor%} 
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
    </button>
    <a style="float:right;" href="{{path('crowdrise_probleme_displayAll')}}"class="waves-effect waves-light btn"><i class="material-icons left">replay</i>Retour à la liste</a>
    <br><br><br><br>
      </form>
  </div>
</section>
{% endblock %}
